{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "rss-news-carousel/news-carousel",
  "version": "1.0.3",
  "title": "RSS News Carousel",
  "category": "widgets",
  "icon": "rss",
  "description": "Display RSS feed items in a carousel",
  "attributes": {
    "feedUrl": {
      "type": "string",
      "default": ""
    },
    "showDots": {
      "type": "boolean",
      "default": true
    },
    "showArrows": {
      "type": "boolean",
      "default": true
    },
    "dotSize": {
      "type": "number",
      "default": 12
    },
    "arrowSize": {
      "type": "number",
      "default": 24
    },
    "arrowStyle": {
      "type": "string",
      "default": "slick"
    },
    "dotColor": {
      "type": "string",
      "default": "#cccccc"
    },
    "activeDotColor": {
      "type": "string",
      "default": "#f8b317"
    },
    "arrowColor": {
      "type": "string",
      "default": "#1a1a1a"
    },
    "borderRadius": {
      "type": "number",
      "default": 0
    },
    "imageRadius": {
      "type": "number",
      "default": 0
    },
    "paddingTop": {
      "type": "number",
      "default": 24
    },
    "paddingBottom": {
      "type": "number",
      "default": 40
    },
    "paddingLeft": {
      "type": "number",
      "default": 24
    },
    "paddingRight": {
      "type": "number",
      "default": 24
    },
    "backgroundColor": {
      "type": "string",
      "default": "#f8f9fa"
    }
  },
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ]
  },
  "example": {
    "attributes": {
      "feedUrl": "https://www.packers.com/rss/news",
      "showDots": true,
      "showArrows": true,
      "dotSize": 12,
      "arrowSize": 24,
      "arrowStyle": "slick"
    }
  },
  "textdomain": "rss-news-carousel",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style.css",
  "viewScript": "file:./frontend.js",
  "render": "file:./render.php"
}